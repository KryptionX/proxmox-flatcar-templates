# Flatcar Configuration Variables
# Copy this file to flatcar-variables.env and customize your values
# Add flatcar-variables.env to your .gitignore file

# NFS Server Configuration
export NFS_SERVER="your-nfs-server"
export NFS_BASE_PATH="/path/to/storage"
export NFS_OPTIONS="defaults,_netdev,soft,timeo=30,nfsvers=3,nolock"

# Application-specific NFS paths (customize as needed)
export APP_DATA_PATH="${NFS_BASE_PATH}/app-data"
export BACKUP_PATH="${NFS_BASE_PATH}/backups" 
export MEDIA_PATH="${NFS_BASE_PATH}/media"

# Network Configuration
export PROXMOX_IP="192.168.1.1"
export VM_IP_RANGE="192.168.1.100/24"
export GATEWAY="192.168.1.1"

# Proxmox Configuration
export PROXMOX_NODE="your-proxmox-node"
export PROXMOX_USER="your-user@pam!token-id"
export PROXMOX_TOKEN="your-api-token-here"
export STORAGE_POOL="local-lvm"

# VM Configuration
export VM_CORES="4"
export VM_MEMORY="4096"
export DISK_SIZE="40G"

# Security Settings
export SKIP_TLS_VERIFY="false"  # Set to "true" only for lab environments

# User Configuration  
export SSH_PUBLIC_KEY="ssh-ed25519 AAAAC3... your-actual-ssh-key"
export USER_PASSWORD_HASH="$1$salt$your-actual-password-hash" 